<form class="new-job-form" {{action "addJob" on="submit"}}>
  <div class="form-group">
    <label>Title</label>
    <input
      class="form-control"
      value={{title}}
      oninput={{action (mut title) value="target.value"}}
      data-test-newjob-title
    >
  </div>
  <div class="form-group">
    <label>Description</label>
    <input
      class="form-control"
      value={{description}}
      oninput={{action (mut description) value="target.value"}}
      data-test-newjob-description
    >
  </div>
  <div class="form-group">
    <label>Salary</label>
    <input
      class="form-control"
      type="number"
      value={{salary}}
      oninput={{action (mut salary) value="target.value"}}
      data-test-newjob-salary
    >
  </div>
  <div class="form-group">
    <label>Company</label>
    {{#power-select
      options=companies
      selected=company
      triggerClass="form-control"
      triggerId="select-company"
      onchange=(action (mut company)) as |option|}}
      {{option.name}}
    {{/power-select}}
  </div>
  <button 
    type="submit"
    class="btn btn-primary"
    disabled={{isSubmitDisabled}}
    {{action "addJob" this}}
    data-test-newjob-submit
  >
    Create
  </button>
</form>
