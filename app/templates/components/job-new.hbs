<form class="new-job-form" {{action "addJob" on="submit"}}>
  <div class="form-group">
    <label>Title</label>
    {{input class="form-control" value=title}}
  </div>
  <div class="form-group">
    <label>Description</label>
    {{input class="form-control" value=description}}
  </div>
  <div class="form-group">
    <label>Salary</label>
    {{input class="form-control" type="number" value=salary}}
  </div>
  <div class="form-group">
    <label>Company</label>
    {{#power-select
      options=companies
      selected=company
      triggerClass="form-control"
      onchange=(action (mut company)) as |option|}}
      {{option.name}}
    {{/power-select}}
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>
